<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pixelcando" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_boston</item>
        <item name="colorPrimaryVariant">@color/blue_boston</item>
        <item name="colorOnPrimary">@color/blue_malibu</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_boston</item>
        <item name="colorSecondaryVariant">@color/blue_boston</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="android:windowBackground">@color/white_alabaster</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--<item name="toolbarStyle">@style/Toolbar</item> -->
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="ToolbarWithSearchTheme" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorAccent">@color/orange_tulip_tree</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/blue_boston</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_navigation_tint</item>
        <item name="itemTextColor">@color/bottom_navigation_tint</item>
    </style>

    <style name="MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeDialogButton</item>
    </style>

    <style name="PositiveDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/orange_tulip_tree</item>
    </style>

    <style name="NegativeDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray_dove</item>
    </style>

    <style name="InputField">
        <item name="android:textColorHint">@color/gray_silver_chalice</item>
        <item name="boxBackgroundColor">@color/gray_seashell</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_4</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_4</item>
    </style>

    <style name="SectionHeader">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black_mine_shaft</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">@dimen/spacing_16</item>
        <item name="android:paddingEnd">@dimen/spacing_16</item>
        <item name="android:paddingTop">@dimen/spacing_24</item>
        <item name="android:paddingBottom">@dimen/spacing_24</item>
    </style>

    <style name="TabsView">
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabTextColor">@color/gray_dove</item>
        <item name="tabSelectedTextColor">@color/blue_boston</item>
    </style>

    <style name="ScrollableTabsView" parent="TabsView">
        <item name="tabMode">scrollable</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingStart">@dimen/spacing_16</item>
        <item name="android:paddingEnd">@dimen/spacing_16</item>
    </style>

    <style name="FixedTabsView" parent="TabsView">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="android:layout_marginStart">@dimen/spacing_16</item>
        <item name="android:layout_marginEnd">@dimen/spacing_16</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="PositiveTextButton" parent="Widget.MaterialComponents.Button.TextButton" />

    <style name="NeutralTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/gray_dove</item>
    </style>
</resources>