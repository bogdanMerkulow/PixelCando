<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pixelcando" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_boston</item>
        <item name="colorPrimaryVariant">@color/blue_boston</item>
        <item name="colorOnPrimary">@color/blue_malibu</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_boston</item>
        <item name="colorSecondaryVariant">@color/blue_boston</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SignInField">
        <item name="android:textColorHint">@color/silver_chalice</item>
        <item name="boxBackgroundColor">@color/gray_seashell</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_4</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_4</item>
    </style>

    <style name="TabsView">
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabTextColor">@color/gray_dove</item>
        <item name="tabSelectedTextColor">@color/blue_boston</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingLeft">@dimen/spacing_16</item>
        <item name="android:paddingRight">@dimen/spacing_16</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>